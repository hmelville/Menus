= render partial: 'button_strip'
= form_for @collection_meal, html: {class: 'form'} do |f|

  .fields
    .large-10.medium-10.small-10.columns.no-padding
      = f.label :meal_id, 'Meal:'
      = f.select :meal_id, options_from_collection_for_select(Meal.all, :id, :name, @collection_meal.meal.try(:id)), include_blank: true
    .large-2.medium-2.small-2.columns
      .button-row
        .button_strip
          %ul.button-group.round
            %li= link_to(icon('plus',""), new_meal_path, class: 'button')

    = f.hidden_field :collection_id