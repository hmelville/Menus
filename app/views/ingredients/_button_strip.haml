.button-row
  .button_strip
    %ul.button-group.round.right
      - if @buttons.include?(:new)
        %li= link_to(icon('plus', 'New Ingredient'), new_ingredient_path(reset_back: true), class: 'button')

      - if @buttons.include?(:save)
        %li= f.button icon('save', 'Save'), class: 'button', data: { disable_with: "Save" }

      - if @buttons.include?(:cancel)
        %li= link_to(icon('undo', 'Cancel'), session[:ingredient_return_to], class: 'button')

      - if @buttons.include?(:index)
        %li= link_to(icon('list', 'List'), ingredients_path(reset_back: true), class: 'button')

      - if @buttons.include?(:edit)
        %li= link_to(icon('pencil', 'Edit'), edit_ingredient_path(reset_back: true), class: 'button')

      - if @buttons.include?(:delete)
        %li= link_to(icon('trash', 'Delete'), @ingredient, class: 'button', method: :delete, data: { confirm: { title: "Are you sure you want to delete #{@ingredient.name}?" }})

  %h1= @page_heading.gsub(/\s/, '&nbsp;').html_safe