.button-row
  .button_strip
    %ul.button-group.round.right
      - if @recipe_ingredient_buttons.include?(:save)
        %li= link_to(icon('save',"Save"), @recipe_ingredient, class: 'button submit')

      - if @recipe_ingredient_buttons.include?(:cancel)
        %li= link_to(icon('undo',"Cancel"), session[:recipe_ingredient_return_to], class: 'button')

      - if @recipe_ingredient_buttons.include?(:delete)
        %li= link_to(icon('trash',"Delete"), @recipe_ingredient, class: 'button', data: {confirm: 'Are you sure?'}, method: :delete)

  %h1= @recipe_ingredient_page_heading.gsub(/\s/, '&nbsp;').html_safe