.button-row
  .button_strip
    %ul.button-group.round.right
      - if @unit_buttons.include?(:new)
        %li= link_to(icon('plus', 'New Unit'), new_food_menus_unit_path(reset_back: true), class: 'button')

      - if @unit_buttons.include?(:save)
        %li= f.button icon('save', 'Save'), class: 'button'

      - if @unit_buttons.include?(:cancel)
        %li= link_to(icon('undo', 'Cancel'), food_menus_units_path, class: 'button')

      - if @unit_buttons.include?(:index)
        %li= link_to(icon('list', 'List'), food_menus_units_path(reset_back: true), class: 'button')

      - if @unit_buttons.include?(:edit)
        %li= link_to(icon('pencil', 'Edit'), edit_food_menus_unit_path(reset_back: true), class: 'button')

      - if @unit_buttons.include?(:delete)
        %li= link_to(icon('trash', 'Delete'), @unit, class: 'button', data: { confirm: "Are you sure you want to delete #{@unit.name}?" }, method: :delete)

  %h1= @unit_page_heading.gsub(/\s/, '&nbsp;').html_safe