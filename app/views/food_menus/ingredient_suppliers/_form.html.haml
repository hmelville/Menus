= render partial: 'button_strip'

= simple_form_for @ingredient_supplier, html: {class: 'form'} do |f|

  .large-6.medium-6.small-12.columns
    .large-10.medium-10.small-10.columns.no-padding
      .input
        = f.label 'Supplier:'
        = f.select :supplier_id, options_from_collection_for_select(FoodMenus::Supplier.all, :id, :name, @ingredient_supplier.supplier.try(:id)), include_blank: true
    .large-2.medium-2.small-2.columns
      .button-row
        .button_strip
          %ul.button-group.round
            %li= link_to(icon('plus',""), new_food_menus_supplier_path, class: 'button')
  .large-3.medium-3.small-6.columns
    .input
      = f.label "Price:"
      = f.number_field :price, value: number_to_currency(f.object.price, delimiter: '', unit: ''), step: :any
  .large-3.medium-3.small-6.columns
    .input
      = f.label "Aisle:"
      = f.number_field :aisle, step: 1

  = f.hidden_field :ingredient_id