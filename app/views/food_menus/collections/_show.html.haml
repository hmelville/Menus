- if current_user.meals.any? && collection.show_meals?
  .row
    .button_strip
      %ul.button-group.round.right
        %li= link_to(icon('plus', "Add Meal"), new_food_menus_collection_meal_path(collection_id: collection.id, reset_back: true), class: 'button')

  %fieldset.margin-bottom
    %legend Meals:
    - if collection.collection_meals.any?
      %table.full
        %tbody
          - collection.collection_meals.each do |collection_meal|
            %tr
              %td
                = link_to collection_meal.meal.name, edit_food_menus_collection_meal_path(collection_meal, reset_back: true), class: "red"
                = render partial: '/food_menus/collections/index', locals: {id: collection_meal.meal.id, collection: collection_meal.meal.collection, hidden_initially: hidden_initially, show_prefix: show_prefix, show_recipe_names: false}

