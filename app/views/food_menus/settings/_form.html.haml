= render partial: 'button_strip'
= simple_form_for @setting, html: {class: 'form'} do |f|
  .columns
    %fieldset.margin-bottom
      %legend Menu Rotations:
      .large-6.medium-12.small-12.columns
        .input
          = f.label 'Weeks:', required: true
          = f.select :menu_rotation_weeks, Setting::WEEKS
      .large-12.medium-12.small-12.columns
        .input
          = f.input :menu_rotation_start_date, label: "Start date:", as: :date, include_blank: true, input_html: { class: "calende" }

  .columns
    %fieldset.margin-bottom
      %legend Emails:
      .large-6.medium-12.small-12.columns
        .input
          = f.label 'Send reminders:', required: true
          = f.select :reminder_emails, collection: [["Yes!", true], ["No", false]]

      .large-12.medium-12.small-12.columns
        .input
          = f.input :reminder_emails_send_time, label: "Time to send:",  as: :date, include_blank: true, input_html: { class: "calende" }

  .columns
    %fieldset
      %legend Shopping:
      .large-6.medium-12.small-12.columns
        .input
          = f.label 'Default days:', required: true
          = f.select :default_shopping_days, (0..31)