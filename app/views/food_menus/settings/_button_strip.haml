.button-row
  .button_strip
    %ul.button-group.round.right

      - if @setting_buttons.include?(:save)
        %li= link_to(icon('save',"Save"), @setting, class: 'button submit')

      - if @setting_buttons.include?(:cancel)
        %li= link_to(icon('undo',"Cancel"), food_menus_settings_path(reset_back: true), class: 'button')

      - if @setting_buttons.include?(:edit)
        %li= link_to(icon('pencil',"Edit"), edit_food_menus_setting_path(@setting, reset_back: true), class: 'button')

  %h1= @setting_page_heading.gsub(/\s/, '&nbsp;').html_safe